{
  "manifest_version": 2,
  "name": "Video Frame Capture",
  "version": "1.0",
  "description": "A tool for capturing frames from videos. You can capture certain frames from videos, or capture frames from a video in a specified time range. All images are saved in PNG, and they are automatically downloaded to the default download path of your browser.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "<all_urls>",
    "notifications",
    "pageAction"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "sidebar_action": {
    "default_panel": "popup.html",
    "default_title": "Video Frame Capture",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "open_at_install": true
  },
  "commands": {
    "screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "catch a screenshot"
    },
    "start-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "start recording"
    },
    "stop-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "stop recording"
    },
    "custom-record": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "self-defined recording"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  }
}